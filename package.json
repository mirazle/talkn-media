{
  "name": "talkn-media",
  "version": "0.0.0",
  "private": true,
  "author": "talkn",
  "scripts": {
    "build": "yarn clean && NODE_ICU_DATA=node_modules/full-icu next build",
    "ci:test:jest": "NODE_ICU_DATA=node_modules/full-icu JEST_JUNIT_OUTPUT_DIR=reports/junit/test-results.xml jest --coverage --runInBand --reporters=default --reporters=jest-junit --verbose",
    "clean": "rm -rf public && mkdir public",
    "commit": "git-cz",
    "dev": "yarn clean && NODE_ICU_DATA=node_modules/full-icu next dev",
    "export": "yarn clean && NODE_ICU_DATA=node_modules/full-icu next export",
    "format": "run-s format:* && yarn prettier --write",
    "format:eslint": "yarn lint:eslint --fix",
    "format:stylelint": "yarn lint:stylelint --fix",
    "lint": "run-p -c lint:*",
    "lint:eslint": "eslint 'src/**/*.{ts,tsx,js,jsx}'",
    "lint:htmlhint": "htmlhint src/internal-assets/**/*.html",
    "lint:stylelint": "stylelint 'src/**/*.{tsx,less,scss,css}'",
    "prettier": "prettier 'src/**/*.{ts,tsx,js,jsx,less,scss,css}'",
    "server": "yarn clean && NODE_ICU_DATA=node_modules/full-icu ts-node --project tsconfig.server.json src/server.ts",
    "start": "yarn build && next start -p 80",
    "test:depcruise": "depcruise --exclude '^src/internal-assets|^src/external-assets' --validate .dependency-cruiser.js src",
    "test:jest": "jest --coverage --no-cache",
    "test:jest:update-snapshot": "jest -u --coverage"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog",
      "disableScopeLowerCase": true,
      "disableSubjectLowerCase": true
    }
  },
  "dependencies": {
    "@types/compression": "^1.7.0",
    "@types/express": "^4.17.11",
    "@types/express-session": "^1.17.3",
    "@types/node-cache": "^4.2.5",
    "body-parser": "^1.19.0",
    "class-transformer": "^0.3.1",
    "compression": "^1.7.4",
    "dayjs": "^1.10.3",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "full-icu": "^1.3.1",
    "jsdom": "16.2.1 because of https://github.com/jsdom/jsdom/issues/3010",
    "next": "^10.0.0",
    "next-seo": "^4.14.0",
    "node-cache": "^5.1.2",
    "node-sass": "^4.14.1",
    "normalize.css": "^8.0.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "recoil": "^0.0.13",
    "reflect-metadata": "^0.1.13",
    "sass-extract": "^2.1.0",
    "sass-extract-js": "^0.4.0",
    "sass-extract-loader": "^1.1.0",
    "styled-components": "^5.2.0",
    "ts-node": "^9.1.1"
  },
  "devDependencies": {
    "@babel/plugin-proposal-decorators": "^7.10.5",
    "@svgr/webpack": "^5.4.0",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.0.4",
    "@types/jest": "^26.0.14",
    "@types/jsdom": "^16.2.4",
    "@types/node": "^14.14.27",
    "@types/react": "^16.9.55",
    "@types/react-dom": "^16.9.9",
    "@types/react-test-renderer": "^16.9.3",
    "@types/recoil": "^0.0.1",
    "@types/styled-components": "^5.1.4",
    "@typescript-eslint/eslint-plugin": "^4.4.1",
    "@typescript-eslint/parser": "^4.4.1",
    "babel-plugin-styled-components": "^1.11.1",
    "copy-webpack-plugin": "^6.2.1",
    "cz-conventional-changelog": "^3.3.0",
    "dependency-cruiser": "^9.15.0",
    "dotenv": "^8.2.0",
    "eslint": "^7.11.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-prefer-arrow": "^1.2.2",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.21.4",
    "eslint-plugin-react-hooks": "^4.1.2",
    "htmlhint": "^0.14.1",
    "husky": "^4.3.0",
    "jest": "^26.5.3",
    "jest-junit": "^12.0.0",
    "jest-raw-loader": "^1.0.1",
    "lint-staged": "^10.4.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.2",
    "raw-loader": "^4.0.2",
    "react-test-renderer": "^16.13.1",
    "sort-package-json": "^1.46.0",
    "stylelint": "13.3.0 because of https://github.com/stylelint/stylelint/issues/4732",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-recess-order": "^2.1.0",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-high-performance-animation": "^1.5.1",
    "ts-jest": "^26.4.3",
    "typescript": "^4.1.1-rc"
  }
}
